  <style>
    /* Set a background color */
    body {
      font-family: 'PT Serif', serif;
      background-color: #f2f2f2;
    }

    /* Style the header */
    .header {
      background-color: #333;
      color: #fff;
      padding: 20px;
    }

    /* Style the logo */
    .logo {
      font-size: 30px;
    }

    /* Style the navigation bar */
    .navbar {
      overflow: hidden;
    }

    .navbar a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    /* Style the search bar */
    .search {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 4px;
      margin-top: 10px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    /* Style the main content area */
    .main {
      width: 80%;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .headline {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .div1 {
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 20px;
      margin-bottom: 20px;
      overflow: auto;
      /* add overflow property */
    }

    .snippet {
      font-family: monospace;
      font-size: 16px;
      white-space: pre-wrap;
      word-wrap: break-word;
      background-color: #f7f7f7;
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 10px;
      overflow: auto;
      /* add overflow property */
    }


    .line {
      margin: 0;
    }

    .par {
      font-weight: bold;
    }

    @media (max-width: 600px) {
      .main {
        width: 100%;
      }
    }
  </style>
  <title>Home</title>
</head>

<body class="body">
  <%- include('../partials/header.ejs') %>

  <main id="main" class="main">
    <h2 class="headline">Results:</h2>
    <% if (result.length> 0) { %>
    <% result.forEach(snippet=> { %>
    <div class="div1">
      <p class="line"> Tag: <span style="text-transform:uppercase">
          <%= snippet.tag %>
        </span> </p>
      <pre class="snippet"> <%= snippet.snippet %> </pre>
      <p class="line"> Title: <span style="text-transform:uppercase">
          <%= snippet.title %>
        </span> </p>
      <p class="line"> Author: <span style="text-transform:uppercase">
          <%= snippet.author %>
        </span> </p>
      <p class="line"> Created At: <span>
          <%= new Date(snippet.createdAt).toLocaleString() %>
        </span> </p>
      <p class="line"> Updated At: <span>
          <%= new Date(snippet.updatedAt).toLocaleString() %>
        </span> </p>
    </div>
    <% }) %>
    <% } else { %>
    <div class="div1">
      <p class="line"> There is no match!</p>
    </div>
    <% } %>
  </main>

</body>

</html>