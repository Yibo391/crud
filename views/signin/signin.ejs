  <style>
    /* Body styles */
    body {
      font-family: 'PT Serif', serif;
      margin: 0;
      padding: 0;
    }

    /* Header styles */
    header {
      background-color: #f1f1f1;
      padding: 20px;
      text-align: center;
    }

    header h1 {
      margin: 0;
    }

    /* Form styles */
    .sec2 {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-top: 50px;
    }

    .sec3 {
      background-color: #f1f1f1;
      border-radius: 5px;
      padding: 20px;
      text-align: center;
      box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
      width: 350px;
    }

    .sec3 h2 {
      margin-top: 0;
    }

    label {
      display: block;
      margin-bottom: 10px;
      text-align: left;
    }

    input[type="email"],
    input[type="password"] {
      border: none;
      border-radius: 5px;
      box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
      padding: 10px;
      margin-bottom: 20px;
      width: 80%;
      margin: 10px;
    }

    input[type="submit"] {
      background-color: #4CAF50;
      border: none;
      border-radius: 5px;
      box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
      color: white;
      cursor: pointer;
      padding: 10px 20px;
    }

    input[type="submit"]:hover {
      background-color: #3e8e41;
    }

    .line {
      color: red;
      margin: 0 auto;
      padding: 10px;
    }

    .div2 {
      background-color: #f1f1f1;
      border-radius: 5px;
      box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
      margin-bottom: 20px;
      padding: 20px;
      text-align: center;
      width: 350px;
    }
  </style>
  <title>Sign-in</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <% if (message.length> 0) { %>
  <div class="div2">
    <p class="line">
      <%= message %>
    </p>
  </div>
  <% } %>
  <main class="sec2">
    <section class="sec3">
      <h2>Sign-in:</h2>
      <form action="/sign-in" method="POST">
        <label for="email">E-mail:</label><br>
        <input type="email" id="email" name="email" placeholder="name@domain.com" required><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" placeholder="password" autocomplete="on" required><br>
        <input type="hidden" name="_csrf" value="<%= csrfTocken %>"><br>
        <input type="submit" value="Sign"><br>
      </form>
    </section>
  </main>

</body>

</html>
