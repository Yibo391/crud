  <style>
    body {
      font-family: 'PT Serif', serif;
      margin: 0;
      padding: 0;
    }

    /* Style the labels */
    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    /* Style the inputs */
    input {
      padding: 8px;
      margin-bottom: 15px;
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    /* Style the submit button */
    input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    /* Style the form message */
    .line {
      margin: 0;
      color: red;
    }

    /* Style the advice section */
    .div3 {
      margin-top: 20px;
      border: 1px solid #ccc;
      background-color: #f2f2f2;
      padding: 10px;
    }

    /* Style the advice section text */
    .div3 p {
      margin: 0;
      font-style: italic;
    }

    /* Style the section */
    .sec3 {
      width: 50%;
      margin: auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    /* Style the main section */
    .sec2 {
      padding: 50px 0;
    }

    /* Style the header */
    header {
      color: #fff;
      padding: 10px;
    }

    /* Style the header link */
    header a {
      color: #fff;
      text-decoration: none;
    }

    /* Style the header link when hover */
    header a:hover {
      text-decoration: underline;
    }

    /* Style the header h1 */
    header h1 {
      margin: 0;
    }

    /* Style the header h1 a */
    header h1 a {
      color: #fff;
    }
  </style>
  <title>Sign-up</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <% if (message.length> 0) { %>
  <div class="div2">
    <p class="line">
      <%= message %>
    </p>
  </div>
  <% } %>
  <main class="sec2">
    <section class="sec3">
      <h2>Registration:</h2>
      <form action="/sign-up" method="POST">
        <label for="name">Username:</label><br>
        <input type="text" id="name" name="name" placeholder="username" required><br>
        <label for="email">E-mail:</label><br>
        <input type="email" id="email" name="email" placeholder="name@domain.com" required><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" autocomplete="on" placeholder="password" required><br>
        <input type="hidden" name="_csrf" value="<%= csrfTocken %>"><br>
        <input type="submit" value="Register"><br>
        <div class="div3">
          <p>Be Adviced! The username should ONLY contain letters. The password should be at least
            8 characters that include at least one of each of the following: a letter in
            uppercase, a letter in lowercase, and one digit.</p>
        </div>
      </form>
    </section>
  </main>

</body>

</html>
